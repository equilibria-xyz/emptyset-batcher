{
  "name": "emptyset-batcher",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "yarn compile",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy --network hardhat",
    "deploy:goerli": "hardhat deploy --network goerli",
    "deploy:kovan": "hardhat deploy --network kovan",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "verify:goerli": "hardhat etherscan-verify --network goerli",
    "verify:kovan": "hardhat etherscan-verify --network kovan",
    "verify:mainnet": "hardhat etherscan-verify --network mainnet",
    "gasReport": "REPORT_GAS=true yarn test-integration",
    "test": "hardhat test ./test/unit/**/*",
    "test:integration": "FORK_ENABLED=true hardhat test ./test/integration/**/*",
    "coverage": "hardhat coverage --testfiles 'test/unit/**/*'",
    "coverage:integration": "FORK_ENABLED=true hardhat coverage --testfiles 'test/integration/**/*'",
    "lint": "eslint --fix --ext '.ts,.js' ./ && solhint 'contracts/**/*.sol' --fix",
    "format": "prettier -w .",
    "postinstall": "yarn build",
    "prepare": "husky install",
    "clean": "rm -rf cache artifacts types/generated"
  },
  "author": "",
  "license": "APACHE-2.0",
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "@defi-wonderland/smock": "^2.0.7",
    "@equilibria/root": "0.1.5",
    "@ethersproject/abi": "^5.3.1",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.3.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@openzeppelin/contracts": "4.6.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.0.2",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.7",
    "dotenv": "^8.2.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.1",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.14",
    "hardhat-gas-reporter": "^1.0.6",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "typechain": "^5.0.0",
    "typescript": "^4.3.2"
  },
  "resolutions": {
    "@solidity-parser/parser": "0.14.0"
  },
  "lint-staged": {
    "*.{ts,.js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.sol": "solhint 'contracts/**/*.sol' --fix",
    "*.json": "prettier --write"
  }
}
